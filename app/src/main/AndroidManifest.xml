<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.wit.hillfort">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".main.MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label ="@string/app_name"
            android:theme ="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.login.LoginView">
        </activity>
        <activity android:name=".views.register.RegisterView">
        </activity>
        <activity android:name=".view.settings.SettingsView">
        </activity>
        <activity android:name=".view.hillfortlist.HillfortListView">
        </activity>
        <activity android:name=".view.hillfort.HillfortView">
        </activity>


        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".views.editlocation.EditLocationView">
        </activity>

        <activity
            android:name=".views.map.HillfortMapView">
        </activity>
    </application>

</manifest>